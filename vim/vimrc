filetype off
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

" let Vundle manage Vundle
Bundle 'gmarik/vundle'

Bundle 'bling/vim-airline'
Bundle 'cakebaker/scss-syntax.vim'
Bundle 'chriskempson/tomorrow-theme', { 'rtp': 'vim/' }
Bundle 'ervandew/supertab'
Bundle "garbas/vim-snipmate"
Bundle 'kchmck/vim-coffee-script'
Bundle 'kien/ctrlp.vim'
Bundle "MarcWeber/vim-addon-mw-utils"
Bundle 'mileszs/ack.vim'
Bundle 'nono/vim-handlebars'
Bundle 'pangloss/vim-javascript'
Bundle 'rking/ag.vim'
Bundle 'scrooloose/nerdcommenter'
Bundle 'scrooloose/nerdtree'
Bundle 'scrooloose/syntastic'
Bundle 'skwp/vim-rspec'
Bundle 'slim-template/vim-slim'
Bundle 'sunaku/vim-ruby-minitest'
Bundle "tomtom/tlib_vim"
Bundle 'tpope/vim-endwise'
Bundle 'tpope/vim-fugitive'
Bundle 'tpope/vim-haml'
Bundle 'tpope/vim-markdown'
Bundle 'tpope/vim-rails'
Bundle 'tpope/vim-surround'
Bundle 'vim-ruby/vim-ruby'

filetype plugin indent on
set nocompatible
set t_Co=256
syntax on
set autoindent
set expandtab
set history=1000
set hlsearch
set ignorecase
set smartcase
set incsearch
set list listchars=tab:»·,trail:· " detect trailing whitespace
set mouse=a
set number
set cursorline
set shiftwidth=2
set showcmd
set softtabstop=2
set tabstop=2
let g:airline_powerline_fonts = 1
set laststatus=2 " this is for vim-airline
" Sets a timeout limit, used to kill the lag between deleting and top insert: O
set timeout timeoutlen=1000 ttimeoutlen=100
set backspace=indent,eol,start
set pastetoggle=<F7>

let mapleader = ','
let g:mapleader = ','
inoremap ;a <ESC>
inoremap ;d <ESC>:update<CR>
inoremap ;f <C-O>:update<CR>
nnoremap ;f :update<CR>
" Quick moves to splits and tab
nnoremap <leader>e :e <C-R>=expand('%:h').'/'<CR>
nnoremap <leader>s :sp <C-R>=expand('%:h').'/'<CR>
nnoremap <leader>v :vsp <C-R>=expand('%:h').'/'<CR>
nnoremap <leader>t :tabe <C-R>=expand('%:h').'/'<CR>
" Use CTRL to move lines up and down
nnoremap <C-j> :m .+1<CR>==
nnoremap <C-k> :m .-2<CR>==
inoremap <C-j> <ESC>:m .+1<CR>==gi
inoremap <C-k> <ESC>:m .-2<CR>==gi
vnoremap <C-j> :m '>+1<CR>gv=gv
vnoremap <C-k> :m '<-2<CR>gv=gv
" Toggle highlight
noremap <leader>h :noh<CR>

" GOTCHA IN MY CROSSHAIRS
nnoremap <leader>/ :set cursorline!<CR>
nnoremap <leader>\ :set cursorcolumn!<CR>

nmap <leader>n :NERDTreeToggle<CR> :NERDTreeMirror<CR>
let g:SuperTabDefaultCompletionType = "<c-n>"

if strftime("%H") < 18
  colorscheme Tomorrow
else
  colorscheme Tomorrow-Night-Bright
endif
